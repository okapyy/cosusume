= render 'items/header'
.devise
  .block
    .block__title
      %h2 新規会員登録
    .block__form
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = render "devise/shared/error_messages", resource: @user
        .field
          = f.text_field :nickname, placeholder: "\uf007 ニックネーム", class: "fa"
        .field
          = f.email_field :email, autocomplete: "email", placeholder: "\uf0e0 E-Mail", class: "fa"
        .field
          = f.password_field :password, autocomplete: "new-password", placeholder: "\uf084 パスワード(８文字以上)", class: "fa"
        .field
          = f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "\uf084 パスワード(８文字以上)", class: "fa"
        = f.submit "次へ進む", class: "actions"
      .link
        %p
          すでにアカウントをお持ちの方は
          = link_to "こちら", new_user_session_path, class: "link__btn"